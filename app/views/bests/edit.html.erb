<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>edit best</h2>
      <%= form_for(@best) do |f| %>
      <div class="form-body">
      	<div class=" text-center">
          <div class="field">
            <% if @best.best_image.present? %>
  	  	      <p><%= attachment_image_tag @best, :best_image, size:'300x200', id: :img_prev%></p>
            <% else %>
              <p><%= image_tag "no_image.png", id: :img_prev, size:'300x200' %></p>
            <% end %>
  	  	    <p class="inline"><%= f.attachment_field :best_image,id: "user_img" %></p>
          </div>
      	</div>
		<div class="form-group">
		  <%= f.label :"best_name" %><br />
		  <% if @best.errors.any? %>
		  <div class="alert alert-danger">
		  	<ul>
		  	  <% @best.errors.full_messages.each do |message| %>
		  	  <li><%= message %></li>
		  	  <% end %>
		  	</ul>
		  </div>
		  <% end %>
		  <%= f.text_field :best_name, autofocus: true, class:"form-control", placeholder:"name"%>
		</div>
		<div class="form-group">
		  <%= f.label :"best_url" %><br />
		  <%= f.text_field :best_url, autofocus: true, class:"form-control", placeholder:"url"%>
		</div>
		<div class="form-group">
  	      <%= f.label :"genre" %><br />
  	      <%= f.select :genre, Best.genres.keys.to_a, {},class:"form-control" %>
		</div>
		<div class="form-group">
	      <%= f.label :"recommend" %><br />
		  <%= f.text_area :recommend, class:"form-control", placeholder:"recommend"%>
		</div>
		<%= f.submit "Update best", class: "btn btn-lg btn-block btn-success" %>
	  </div>
	  <% end %>
	</div>
  </div>
</div>