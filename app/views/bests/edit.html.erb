<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>BEST 編集</h2>
      <%= form_for(@best) do |f| %>
      <div class="form-body">
      	<div class=" text-center">
          <div class="field">
            <% if @best.best_image.present? %>
  	  	      <p><%= attachment_image_tag @best, :best_image, size:'300x200', id: :img_prev%></p>
            <% else %>
              <p><%= image_tag "no_image.png", id: :img_prev, size:'300x200' %></p>
            <% end %>
  	  	    <p class="inline"><%= f.attachment_field :best_image,id: "user_img" %></p>
          </div>
      	</div>
		<div class="form-group">
		  <%= f.label :BEST名称, "BEST名称" %><br />
		  <%= render 'shares/error', model: @best %>
		  <%= f.text_field :best_name, autofocus: true, class:"form-control", placeholder:"BEST名称（15文字以内）"%>
		</div>
		<div class="form-group">
		  <%= f.label :URL, "URL" %><br />
		  <%= f.text_field :best_url, autofocus: true, class:"form-control", placeholder:"URL"%>
		</div>
		<div class="form-group">
  	      <%= f.label :"ジャンル" %><br />
  	      <%= f.select :genre, Best.genres.keys.to_a, {},class:"form-control" %>
		</div>
		<div class="form-group">
	      <%= f.label :"紹介文" %><br />
		  <%= f.text_area :recommend, class:"form-control", rows: 5, placeholder:"紹介文（200文字以内）"%>
		</div>
		<%= f.submit "更新する", class: "btn btn-lg btn-block btn-success" %>
	  </div>
	  <% end %>
	</div>
  </div>
</div>