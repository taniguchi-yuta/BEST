<p class="text-center"><%= link_to @bests.genres ,bests_genre_search_path %></p>
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <%= render 'shares/sidebar', all_ranks: @all_ranks, best: @best %>
      </div>
      <div class="col-lg-9">
        <h2>BESTs list</h2>
        <div class="text-center">
        <% @bests.each do |best| %>
        <div class="pull-left">
          <div class="mr-15"><%= link_to best_path(best) do %>
            <%= attachment_image_tag best, :best_image, :fill, 250, 200, format: 'jpeg', fallback: "no_image.png", size:'250x200' %>
            <% end %>
            <p class="well well-sm text-center lead"><%= best.genre %></p>

          <div class="panel panel-default">
          <%= best.best_name %>
          <div><%= best.user.age %>
            <%= best.user.sex %>
            <% if user_signed_in? %>
            <% if best.favorited_by?(current_user) %>
            <p><span>お気に入り解除: </span><%=link_to best.favorites.count, best_favorites_path(best.id), method: :delete %></p>
            <% else %>
            <p><span>お気に入り登録: </span><%=link_to best.favorites.count, best_favorites_path(best.id), method: :post %></p>
            <% end %>
            <% else %>
            <p><span>お気に入り数: </span><%= best.favorites.count %></p>
            <% end %>
          </div>

          </div>
          </div>
        </div>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>