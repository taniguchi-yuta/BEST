<p class="text-center"><%= link_to @bests.genres ,bests_genre_search_path %></p>
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <%= render 'shares/sidebar', all_ranks: @all_ranks, best: @best %>
      </div>
      <div class="col-lg-9">
        <h2>BEST詳細</h2>
        <div class="row">
          <div class="col-md-9 col-md-offset-2">
            <%= attachment_image_tag @best, :best_image, :fill, 250, 200, format: 'jpeg', fallback: "no_image.png", size:'250x200' %>
          <div class="pull-right">
          <div class="text-center">
            <p><%= attachment_image_tag @user, :profile_image, :fill, 80, 80,class: "img-circle", format: 'jpeg', fallback: "no_image.png", size: '80x80',class: "img-circle" %></p>
            <p><%= @user.name %></p>
            <%= @user.sex %>
            <%= @user.age %>
          <div>
          <% if user_signed_in? %>
          <% if @best.favorited_by?(current_user) %>
          <span>お気に入り解除: </span><%=link_to @best.favorites.count, best_favorites_path(@best.id), method: :delete %>
          <% else %>
          <span>お気に入り登録: </span><%=link_to @best.favorites.count, best_favorites_path(@best.id), method: :post %>
          <% end %>
          <% else %>
          <span>お気に入り数: </span><%= @best.favorites.count %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-9 col-md-offset-2">
    <p class="well well-sm text-center lead"><span><%= @best.genre %></span></p>
    <p><span>BEST_name: </span><%= @best.best_name %></p>
    <p><span>BEST_url: </span><%= raw Rinku.auto_link(@best.best_url, :all,'target="_blank"') %></p>
    <p><span>recommend: </span><%= @best.recommend %></p>
    <% if @user.id == current_user.id %>
    <%= link_to "edit", edit_best_path(@best), class: "btn btn-warning" %>
    <%= link_to "destroy", best_path(@best),class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか?" %>
    <% end %>
  </div>
</div>
<p><span><コメント<%= @best.best_comments.count %>件></span></p>
  <table class="show-tb">
    <% @best_comments.each do |best_comment| %>
    <tr>
      <td>
        <%= link_to user_path(best_comment.user), class: "user_#{best_comment.user.id}" do %>
        <%= attachment_image_tag best_comment.user, :profile_image, :fill, 50, 50,class: "img-circle", fallback: "no_image.png", size: "50x50" %><br>
        <%= best_comment.user.name %>
        <% end %>
      </td>
      <td><%= best_comment.comment %></td>
      <% unless current_user != best_comment.user %>
      <td><%= link_to 'Destroy', best_best_comments_path(best_comment.id), class: 'btn-sm btn-danger', method: :delete %></td>
      <% end %>
    </tr>
    <% end %>
  </table>
  <div class="comment-form">
    <%= form_for [@best, @best_comment] do |f| %>
    <%= f.text_area :comment, class:"form-control", placeholder:"comment" %>
    <%= f.submit 'comment', class: "btn btn-lg btn-block btn-success" %>
  </div>
  <% end %>
</div>
</div>
</div>