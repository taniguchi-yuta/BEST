<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <h2>Sign up</h2>
        <div class="form-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"名前"%>
          </div>

          <div class="form-group">
            <%= f.email_field :email, class:"form-control", placeholder:"メールアドレス"%>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"パスワード" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"パスワード確認" %>
          </div>

          <%= f.submit "sign up", class:"btn btn-lg btn-block btn-base-1 mt-20 btn btn-info" %>
          <% end %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>