<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Edit User</h2>
      <%= form_for(@user) do |f| %>
      <div class="form-body">
      	<div class=" text-center">
          <div class="field">
          	<% if @user.profile_image.present? %>
  	  	      <p><%= attachment_image_tag @user, :profile_image, size:'200x200', class: "img-circle", id: :img_prev%></p>
            <% else %>
              <p><%= image_tag "no_image.png", class: "img-circle", id: :img_prev, size:'200x200' %></p>
            <% end %>
            <p class="inline"><%= f.attachment_field :profile_image, id: "user_img" %></p>
          </div>
          <div class="form-group">
		    <%= f.radio_button :sex, :male %>
			<%= f.label :sex, "男性", {value: :male, style: "display: inline-block;"} %>
			<%= f.radio_button :sex, :female %>
			<%= f.label :sex, "女性", {value: :female, style: "display: inline-block;"} %>
		  </div>
		  <div class="form-group">
			<%= f.label :"年代" %>
			<%= f.select :age, [["10代", "10代"], ["20代", "20代"],["30代", "30代"], ["40代", "40代"], ["50代", "50代"], ["60代", "60代"], ["70代", "70代"], ["80代", "80代"]] %>
		  </div>
		</div>
		<div class="form-group">
			<%= f.label :"name" %><br />

			<% if @user.errors.any? %>
			  <div class="alert alert-danger">
			    <ul>
			      <% @user.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			    </ul>
			  </div>
			<% end %>

			<%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"name"%>
		</div>
		<div class="form-group">
			<%= f.label :"introduction" %><br />
			<%= f.text_area :introduction, class:"form-control", placeholder:"introduction"%>
		</div>
		<%= f.submit "Update user", class: "btn btn-lg btn-block btn-success" %>
	  </div>
	  <% end %>
	</div>
  </div>
</div>