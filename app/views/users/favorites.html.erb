  <div class="container">
    <div class="row">
      <div class="col-lg-3 sticky">
        <%= render 'shares/sidebar', all_ranks: @all_ranks, best: @best, q: @q %>
      </div>
      <div class="col-lg-9">
        <h2>お気に入り一覧</h2>
        <div class="text-center">
          <% @bests.each do |best| %>
          <div class="pull-left">
            <div class="mr-15"><%= link_to best_path(best) do %>
              <%= attachment_image_tag best, :best_image, :fill, 250, 200, format: 'jpeg', fallback: "no_image.png", size:'250x200' %>
              <% end %>
              <p class="well well-sm text-center lead"><%= best.genre %></p>

              <div class="panel panel-default">
              <%= best.best_name %>
                <div>
                  <% if best.user.sex.nil? %>
                    <%= "性別未設定" %>
                  <% else %>
                    <%= best.user.sex %>
                  <% end %>
                  <% if best.user.age.nil? %>
                    <%= "年齢未設定" %>
                  <% else %>
                    <%= best.user.age %>
                  <% end %>
                  <div class="favorite_<%= best.id %>">
                    <%= render 'favorites/favorite', best: best %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>