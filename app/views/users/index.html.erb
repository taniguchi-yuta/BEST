<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'shares/sidebar', all_ranks: @all_ranks, best: @best, q: @q %>
  	</div>
  	<div class="col-lg-9">
  	  <h2>ユーザ一覧</h2>
		<table class="table">
		  <thead>
		    <tr>
			  <th></th>
			  <th>ユーザー名</th>
			  <th>性別</th>
			  <th>年代</th>
			  <th></th>
		    </tr>
		  </thead>
		  <tbody>
			<% @users.each do |user| %>
			<tr>
			  <td><%= link_to user_path(user) do %>
				<%= attachment_image_tag user, :profile_image, size:'60x60', format: 'jpeg', class: "img-circle pointer", fallback: "no_image.png", size:'60x60' %>
			  	<% end %></td>
			  <td><%= user.name %></td>
			  	<% if user.sex.blank? %>
			      <td><span class="label label-default">未設定</span></td>
			  	<% else %>
			  	  <% case user.sex %>
			  	  <% when 'male' %>
			      <td><span class="label label-primary">男性</span></td>
			      <% when 'female' %>
			      <td><span class="label label-danger">女性</span></td>
			      <% end %>
			    <% end %>
			  	<% if user.age.blank? %>
			      <td><span class="label label-default">未設定</span></td>
			  	<% else %>
			      <td><%= user.age %></td>
			  	<% end %>
			  <td><%= link_to "詳細", user_path(user) %></td>
			</tr>
			<% end %>
		  </tbody>
		</table>
	  <div class="text-center">
	    <%= paginate @users %>
	  </div>
	</div>
  </div>
</div>