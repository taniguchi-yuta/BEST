<p class="text-center"><%= link_to @bests.genres ,bests_genre_search_path %></p>
<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'shares/sidebar', all_ranks: @all_ranks, best: @best %>
  	</div>
  	<div class="col-lg-9">
  	  <h2>Users list</h2>
		<table class="table">
		  <thead>
		    <tr>
			  <th>image</th>
			  <th>name</th>
			  <th>sex</th>
			  <th>age</th>
			  <th></th>
		    </tr>
		  </thead>
		  <tbody>
			<% @users.each do |user| %>
			<tr>
			  <td><%= link_to user_path(user) do %>
				<%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle", format: 'jpeg', fallback: "no_image.png", size:'60x60' %>
			  <% end %></td>
			  <td><%= user.name %></td>
			  <td><%= user.sex %></td>
			  <td><%= user.age %></td>
			  <td><%= link_to "show", user_path(user) %></td>
			</tr>
			<% end %>
		  </tbody>
		</table>
	</div>
  </div>
</div>