<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>
<table>
	<% @users.each do |user| %>
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th>sex</th>
			<th>age</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.png" %></td>
			<td><%= user.name %></td>
			<td><%= user.sex %></td>
			<td><%= user.age %></td>
			<td><%= link_to "show", user_path(user) %></td>
		</tr>
	</tbody>
	<% end %>
</table>


<%= link_to "ログアウト", destroy_user_session_path, method: :delete %>