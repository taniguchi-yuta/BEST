<p class="text-center"><%= link_to @bests.genres ,bests_genre_search_path %></p>
<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'shares/sidebar', all_ranks: @all_ranks, best: @best %>
  	</div>
	<div class="col-lg-9">
	  <div class="row">
	    <div class="col-md-8 col-md-offset-2">
	      <div class="text-center">
		    <%= attachment_image_tag @user, :profile_image, :fill, 200, 200, class: "img-circle", format: 'jpeg', fallback: "no_image.png", size: '200x200',class: "img-circle" %>
			<p><%= @user.name %></p>
			<p><%= @user.sex %></p>
			<p><%= @user.age %></p>
			<% if @user.id == current_user.id %>
			<%= link_to "edit", edit_user_path(@user), class: "btn btn-warning" %>
			<%= link_to "favorites lists", favorites_user_path(@user), class: "btn btn-info" %>
			<% end %>
		  </div>
		  <p>introduction:<%= @user.introduction %></p>
		</div>
	  </div>
	  <h3>投稿一覧</h3>
	  <% @bests_user.each do |best| %>
	  <div class="pull-left text-center">
		<div class="mr-15"><%= link_to best_path(best) do %>
			<%= attachment_image_tag best, :best_image, :fill, 250, 200, format: 'jpeg', fallback: "no_image.png", size:'250x200' %>
			<% end %>
			<p class="well well-sm lead"><%= best.genre %></p>
			<div class="panel panel-default">
			  <p><%= best.best_name %></p>
			  <% if user_signed_in? %>
			  <% if best.favorited_by?(current_user) %>
			  <p><span>お気に入り解除: </span><%=link_to best.favorites.count, best_favorites_path(best.id), method: :delete %></p>
			  <% else %>
			  <p><span>お気に入り登録: </span><%=link_to best.favorites.count, best_favorites_path(best.id), method: :post %></p>
			  <% end %>
			  <% else %>
			  <p><span>お気に入り数: </span><%= best.favorites.count %></p>
			  <% end %>
			</div>
		  </div>
	  </div>
	  <% end %>
	</div>
  </div>
</div>