<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.png" %>
<%= @user.name %>
<%= @user.sex %>
<%= @user.age %>
<%= @user.introduction %>

<% if @user.id == current_user.id %>
<%= link_to "edit", edit_user_path(@user) %>
<% end %>